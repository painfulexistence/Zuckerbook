<div class="row clearfix">
  <%= render "layouts/notice-box" %>

  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 animated fadeIn" id="posts-all">
    <% if @posts.present? %>
      <%= render @posts %>
    <% else %>
      <div class="jumbotron">
        <h1>Sorry, no public post for now!</h1>
        <h2>Maybe you should sign up?</h2>
        <br>
        <span class="label label-warning"><%= link_to "Sign up", new_user_registration_path %></span>
      </div>
    <% end %>
  </div>

</div>
