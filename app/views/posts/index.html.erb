<div class="row clearfix">
  <%= render "layouts/notice-box" %>

  <div class="col-12 col-sm-8 offset-sm-2 col-md-8 offset-md-2 col-lg-6 offset-lg-3 animated fadeIn" id="posts-all">
    <% if @posts.present? %>
      <%= render @posts %>
    <% else %>
      <div class="jumbotron">
        <h1>Sorry, no results found!</h1>
        <h2>Maybe try other keywords?</h2>
        <br>
        <span class="label label-warning"><%= link_to "Back", posts_path %></span>
      </div>
    <% end %>
  </div>

</div>

<div class="row" id="page-bar">
  <div class="col-md-4 offset-md-4">
    <%# will_paginate @posts %>
  </div>
</div>
