<% time = Time.now %>
<% @now = "#{time.year}-#{time.month}-#{time.day}" %>
<div class="col-md-6 col-md-offset-3" id="log-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <div class="panel panel-default">

      <div class="panel-heading" id="log-name">
        <p>Sign up</p>
      </div>

      <div class="panel-body">
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="field">
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar %>
          </div>
          <br>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: true %>
          </div>

          <div class="field">
            <%= f.label :birthday %><br />
            <%= f.date_field :birthday, min: "1900-01-01", max: @now, autofocus: true, autocomplete: "birthday", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>
          <br>
          <br>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
          </div>
        </div>
        <div class="btn-group">
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-info" %>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>
