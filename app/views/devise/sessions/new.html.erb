<div class="col-md-6 col-md-offset-3" id="log-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="panel panel-default">

      <div class="panel-heading" id="log-name">
        <p>Login</p>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control", required: true %>
          </div>
          <br>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </div>

        <div class="btn-group">
          <div class="actions">
            <%= f.submit "Login", class: "btn btn-info" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
